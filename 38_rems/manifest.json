{
  "name": "REMs",
  "manifest_version": 2,
  "version": "0.1",
  "background": {
    "scripts": ["jquery.js", "background.js"]
  },
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": ["jquery.js", "smoothscroll.js", "content.js"]
  }],
  "permissions": [
    "webNavigation",
    "history",
    "tabs",
    "idle"
  ]
}
